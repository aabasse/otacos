{% extends "::layout.html.twig" %}
{% block title %}Historique - traçabilité{% endblock %}
{% block titre %}Historique - traçabilité{% endblock %}
{% block contenu %}
<div class="row">
	<div id="accordion" role="tablist" aria-multiselectable="true" class="col-12">
	{% for key, traces in tracesByDate %}
		<div class="card mt-1">
	    <div class="card-header p-0" role="tab" id="heading{{ loop.index }}">
	      <h5 class="mb-0 titreAccordion" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ loop.index }}" aria-controls="collapse{{ loop.index }}">
	        <a>
	          {{ key }}
	        </a>
	      </h5>
	    </div>

	    <div id="collapse{{ loop.index }}" class="collapse" role="tabpanel" aria-labelledby="heading{{ loop.index }}">
	      <div class="card-block">
	        <table class="table table-striped table-bordered  table-responsive">
				<thead class="">
					<tr class="">
						<th>Element</th>
						<th class="" >Date</th>
						<th class="" >Remarque</th>
						<th class="" ></th>
					</tr>
				</thead>
				<tbody>
					{% for t in traces %}
					<tr class="">
						<td>{{t.element.libelle|capitalize}}</td>
						<td class="">{{t.date|date('d/m/Y')}}</td>
						<td class="">{{ t.remarque }}</td>
						<td class="tdImg  text-center">
							{% for p in t.photos %}
								<img src="{{ asset('uploads/images/trace/min_'~p.url)}}">
							{% endfor %}
						</td>
					</tr>
					{% endfor  %}
				</tbody>
			</table>
	      </div>
	    </div>
	  </div>
	{%  endfor %}
	</div>
</div>
{% endblock %}
