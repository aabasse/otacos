{% extends "::layout.html.twig" %}
{% block title %}Historique - temperature{% endblock %}
{% block titre %}Historique - temperature{% endblock %}
{% block contenu %}
<div class="row">
	<div id="accordion" role="tablist" aria-multiselectable="true" class="col-12">
	{% for key, temperatures in temperaturesByDate %}
		<div class="card mt-1">
	    <div class="card-header p-0" role="tab" id="heading{{ loop.index }}">
	      <h5 class="mb-0 titreAccordion" data-toggle="collapse" data-parent="#accordion" href="#collapse{{ loop.index }}" aria-controls="collapse{{ loop.index }}">
	        <a>
	          {{ key }}
	        </a>
	      </h5>
	    </div>

	    <div id="collapse{{ loop.index }}" class="collapse" role="tabpanel" aria-labelledby="heading{{ loop.index }}">
	      <div class="card-block">
	        <table class="table table-striped table-bordered  table-responsive">
				<thead class="">
					<tr class="">
						<th>Categorie</th>
						<th>Date</th>
						<th>Moment</th>
						<th>Temperature</th>
					</tr>
				</thead>
				<tbody>
					{% for t in temperatures %}
					<tr class="">
						<td>{{t.categorie.libelle|capitalize}}</td>
						<td class="">{{t.date|date('d/m/Y')}}</td>
						<td class="">{{t.moment|capitalize}}</td>
						<td class="tdImg  text-center">
							<ul>
							{% for d in t.degres %}
								<li>{{ d.equipement|capitalize }} : {{ d.valeur }} Â°</li>
							{% endfor %}
							</ul>
						</td>
					</tr>
					{% endfor  %}
				</tbody>
			</table>
	      </div>
	    </div>
	  </div>
	{%  endfor %}
	</div>
</div>
{% endblock %}
