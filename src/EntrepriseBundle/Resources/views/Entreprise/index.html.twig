{% extends "::layout.html.twig" %}

{% block title %}Entreprises{% endblock %}
{% block titre %}Les entreprises{% endblock %}
{% set liensFilAriane = [ {'url': url('accueil'), 'libelle':'accueil'}, {'url': '', 'libelle':'entreprises'}] %}
{% block contenu %}
    <a class="btn btn-outline-primary" href="{{ path('entreprise_new') }}"><i class="fa fa-plus" aria-hidden="true"></i> Ajouter une entreprise</a>
    <table class="table table-striped table-bordered mt-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Logo</th>
                <th>Est abonn√©</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td><a href="{{ path('entreprise_show', { 'id': entreprise.id }) }}">{{ entreprise.id }}</a></td>
                <td>{{ entreprise.nom }}</td>
                <td>{{ entreprise.logo }}</td>
                <td>{% if(entreprise.estAbonne) %} oui {% else %} non {% endif %}</td>
                <td>
                    <a class="btn btn-outline-secondary" href="{{ path('entreprise_show', { 'id': entreprise.id }) }}"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    <a class="btn btn-outline-secondary" href="{{ path('entreprise_edit', { 'id': entreprise.id }) }}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
