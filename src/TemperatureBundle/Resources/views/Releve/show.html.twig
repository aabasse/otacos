{% extends 'base.html.twig' %}

{% block body %}
    <h1>Releve</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ releve.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if releve.date %}{{ releve.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Moment</th>
                <td>{{ releve.moment }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('releve_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('releve_edit', { 'id': releve.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
