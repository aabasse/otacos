{% extends "::layout.html.twig" %}
{% block title %}Equipements{% endblock %}
{% block titre %}Equipements{% endblock %}

{% block contenu %}
<a  class="btn btn-outline-primary" href="{{ path('equipement_new') }}"><i class="fa fa-user-plus" aria-hidden="true"></i> Ajouter un equipement</a>
    <table class="table table-striped table-bordered mt-2">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipement in equipements %}
            <tr>
                <td>{{ equipement.nom }}</td>
                <td>{{ equipement.categorie }}</td>
                <td>
                    <a class="btn btn-outline-secondary" href="{{ path('equipement_edit', { 'id': equipement.id }) }}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    {{ render(controller('TemperatureBundle:Equipement:deleteButton', {'id':equipement.id})) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
