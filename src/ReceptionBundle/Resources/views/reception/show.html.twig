{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reception</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reception.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if reception.date %}{{ reception.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Degre</th>
                <td>{{ reception.degre }}</td>
            </tr>
            <tr>
                <th>Bonlivraison</th>
                <td>{{ reception.bonLivraison }}</td>
            </tr>
            <tr>
                <th>Remarque</th>
                <td>{{ reception.remarque }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reception_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('reception_edit', { 'id': reception.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
