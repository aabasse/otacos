{% extends "::layout.html.twig" %}

{% block title %}Les salariés{% endblock %}
{% block titre %}Les salariés{% endblock %}
{% block contenu %}
    <a class="btn btn-outline-primary" href="{{ path('utilisateur_new') }}"><i class="fa fa-user-plus" aria-hidden="true"></i> Ajouter un salarié</a>
    <table class="table table-striped table-bordered mt-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Entreprise</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td><a href="{{ path('utilisateur_show', { 'id': utilisateur.id }) }}">{{ utilisateur.id }}</a></td>
                <td>{{utilisateur.username|capitalize}}</td>
                <td>{{utilisateur.email}}</td>
                <td>{{utilisateur.entreprise}}</td>
                <td>
                    <a class="btn btn-outline-secondary" href="{{ path('utilisateur_show', { 'id': utilisateur.id }) }}"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    <a class="btn btn-outline-secondary" href="{{ path('utilisateur_edit', { 'id': utilisateur.id }) }}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
